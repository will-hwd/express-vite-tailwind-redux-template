{
  "name": "community-lottery-portal",
  "private": true,
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"cd backend && npx tsc --watch\" \"nodemon -q dist-backend/index.js\" \"yarn start-client\"",
    "build-client": "cd frontend && tsc && vite build --emptyOutDir",
    "build-server": "cd backend && npx tsc",
    "build": "yarn build-server && yarn build-client",
    "start": "node dist-backend/index.js",
    "start-client": "vite frontend --open"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.2",
    "autoprefixer": "^10.4.16",
    "axios": "^1.5.1",
    "concurrently": "^8.2.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.17.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
